<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>Product</th>
			<th>Description</th>
			<th>Rating</th>
			<th>Price</th>
		</tr>
	</thead>
	<tbody>
		<% products.each do |product| %>
			<tr>
				<td><%= product.name %></td>
				<td><%= product.description %></td>
				<td><%= product.average_rating %></td>
				<td><%= product.price %></td>
		</tr>
		<% end %>
	</tbody>
</table>
